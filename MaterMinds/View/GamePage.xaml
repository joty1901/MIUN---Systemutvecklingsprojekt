<Page x:Class="MaterMinds.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MaterMinds"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GamePage"
      AllowDrop="True"
      Background="{DynamicResource BackgroundIMG}">

    <Grid Name="myCanvas">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>



        <StackPanel Grid.Column="1" Margin="0,4,0,0">
            <WrapPanel  Margin="0,5,0,5" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding IsHidden, FallbackValue=Hidden}" Background="Gray">
                <Grid x:Uid="1" Background="Gray" Margin="15,0,7.5,0" Width="30" Height="34" >

                    <Ellipse Height="30" Stroke="Black" Fill="{Binding CorrectAnswerArray[0]}"/>

                </Grid>
                <Grid x:Uid="2" Background="Gray" Margin="15,0,7.5,0" Width="30" Height="34" >

                    <Ellipse Height="30" Stroke="Black" Fill="{Binding CorrectAnswerArray[1]}"/>

                </Grid>
                <Grid x:Uid="3" Background="Gray" Margin="15,0,7.5,0" Width="30" Height="34">

                    <Ellipse Height="30" Stroke="Black" Fill="{Binding CorrectAnswerArray[2]}"/>

                </Grid>
                <Grid x:Uid="4" Background="Gray" Margin="15,0,7.5,0" Width="30" Height="34">

                    <Ellipse Height="30" Stroke="Black" Fill="{Binding CorrectAnswerArray[3]}"/>

                </Grid>
            </WrapPanel>
            <WrapPanel  Margin="0,5,0,5" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{Binding BackgroundColor[6], FallbackValue=Gray}" AllowDrop="{Binding IsActive[6]}">
                    <Grid x:Uid="1" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                <Grid x:Uid="2" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                <Grid x:Uid="3" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                <Grid x:Uid="4" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                </WrapPanel>
            <WrapPanel  Margin="0,5,0,5" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{Binding BackgroundColor[5], FallbackValue=Gray}" AllowDrop="{Binding IsActive[5]}">
                <Grid x:Uid="1" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                <Grid x:Uid="2" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                <Grid x:Uid="3" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                <Grid x:Uid="4" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                </WrapPanel>
            <WrapPanel  Margin="0,5,0,5" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{Binding BackgroundColor[4], FallbackValue=Gray}" AllowDrop="{Binding IsActive[4]}">
                <Grid x:Uid="1" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                <Grid x:Uid="2" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                <Grid x:Uid="3" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                <Grid x:Uid="4" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                </WrapPanel>
            <WrapPanel  Margin="0,5,0,5" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{Binding BackgroundColor[3], FallbackValue=Gray}" AllowDrop="{Binding IsActive[3]}">
                <Grid x:Uid="1" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                <Grid x:Uid="2" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                <Grid x:Uid="3" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                <Grid x:Uid="4" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                </WrapPanel>
            <WrapPanel  Margin="0,5,0,5" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{Binding BackgroundColor[2], FallbackValue=Gray}" AllowDrop="{Binding IsActive[2]}">
                <Grid x:Uid="1" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                <Grid x:Uid="2" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                <Grid x:Uid="3" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                <Grid x:Uid="4" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                </WrapPanel>
            <WrapPanel  Margin="0,5,0,5" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{Binding BackgroundColor[1], FallbackValue=Gray}" AllowDrop="{Binding IsActive[1]}">
                <Grid x:Uid="1" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                <Grid x:Uid="2" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                <Grid x:Uid="3" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                <Grid x:Uid="4" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                </WrapPanel>
                <WrapPanel  Margin="0,5,0,5" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{Binding BackgroundColor[0], FallbackValue=Gray}" AllowDrop="{Binding IsActive[0]}">
                    <Grid x:Uid="1" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                <Grid x:Uid="2" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                <Grid x:Uid="3" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                    </Grid>
                <Grid x:Uid="4" Background="Transparent" Margin="15,0,7.5,0" Width="30" Height="34" DragOver="panel_DragOver" Drop="panel_Drop" >

                    <Ellipse Height="30" Stroke="Black"/>

                </Grid>
            </WrapPanel>
            <Button Content="Check Answer"  HorizontalAlignment="Center" Style="{DynamicResource RoundButtonTemplate}" Command="{Binding BoolChecker}" FontSize="25" FontWeight="Bold" Width="212" Height="32">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="DarkBlue"/>
                        <GradientStop Color="DodgerBlue" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>
        <StackPanel Grid.Column="2" HorizontalAlignment="Left" Margin="0,50,0,0">
            <WrapPanel Background="{Binding BackgroundColor[6], FallbackValue=Gray}" Margin="0,5,0,5" Height="36" Width="36">
                <Ellipse x:Name="Hint11" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[6][0]}"/>
                <Ellipse x:Name="Hint12" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[6][1]}"/>
                <Ellipse x:Name="Hint13" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[6][2]}"/>
                <Ellipse x:Name="Hint14" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[6][3]}"/>
            </WrapPanel>
            <WrapPanel Background="{Binding BackgroundColor[5], FallbackValue=Gray}" Margin="0,5,0,5" Height="36" Width="36">
                <Ellipse x:Name="Hint21" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[5][0]}"/>
                <Ellipse x:Name="Hint22" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[5][1]}"/>
                <Ellipse x:Name="Hint23" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[5][2]}"/>
                <Ellipse x:Name="Hint24" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[5][3]}"/>
            </WrapPanel>
            <WrapPanel Background="{Binding BackgroundColor[4], FallbackValue=Gray}" Margin="0,5,0,5" Height="36" Width="36">
                <Ellipse x:Name="Hint32" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[4][0]}"/>
                <Ellipse x:Name="Hint31" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[4][1]}"/>
                <Ellipse x:Name="Hint33" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[4][2]}"/>
                <Ellipse x:Name="Hint34" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[4][3]}"/>
            </WrapPanel>
            <WrapPanel Background="{Binding BackgroundColor[3], FallbackValue=Gray}" Margin="0,5,0,5" Height="36" Width="36">
                <Ellipse x:Name="Hint41" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[3][0]}"/>
                <Ellipse x:Name="Hint42" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[3][1]}"/>
                <Ellipse x:Name="Hint43" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[3][2]}"/>
                <Ellipse x:Name="Hint44" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[3][3]}"/>
            </WrapPanel>
            <WrapPanel Background="{Binding BackgroundColor[2], FallbackValue=Gray}" Margin="0,5,0,5" Height="36" Width="36">
                <Ellipse x:Name="Hint51" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[2][0]}"/>
                <Ellipse x:Name="Hint52" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[2][1]}"/>
                <Ellipse x:Name="Hint53" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[2][2]}"/>
                <Ellipse x:Name="Hint54" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[2][3]}"/>
            </WrapPanel>
            <WrapPanel Background="{Binding BackgroundColor[1], FallbackValue=Gray}" Margin="0,5,0,5" Height="36" Width="36">
                <Ellipse x:Name="Hint61" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[1][0]}"/>
                <Ellipse x:Name="Hint62" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[1][1]}"/>
                <Ellipse x:Name="Hint63" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[1][2]}"/>
                <Ellipse x:Name="Hint64" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[1][3]}"/>
            </WrapPanel>
            <WrapPanel Background="{Binding BackgroundColor[0], FallbackValue=Gray}" Margin="0,5,0,5" Height="36" Width="36">
                <Ellipse x:Name="Hint71" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[0][0]}"/>
                <Ellipse x:Name="Hint72" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[0][1]}"/>
                <Ellipse x:Name="Hint73" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[0][2]}"/>
                <Ellipse x:Name="Hint74" Width="15" Height="15" Margin="1,1,1,1" Fill="{Binding hintArray[0][3]}"/>
            </WrapPanel>
        </StackPanel>
        <StackPanel Grid.Column="0" HorizontalAlignment="Right" Margin="0,150,0,0">
            <local:GuessControl/>
            <Button Grid.Column="0" Content="Back"  Command="{Binding Back}" Style="{StaticResource RoundButtonTemplate}" FontWeight="Bold" FontSize="25" >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="DodgerBlue"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>
</Page>
