<UserControl x:Class="MaterMinds.GuessControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MaterMinds"
      mc:Ignorable="d" 
      d:DesignHeight="150" d:DesignWidth="100">

    <Border BorderThickness="2" BorderBrush="Black" CornerRadius="5" Padding="0"
        HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid Background="Gray" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <local:RedPeg       Grid.Column="0" Grid.Row="0"/>
            <local:GreenPeg     Grid.Column="0" Grid.Row="1"/>
            <local:PurplePeg    Grid.Column="0" Grid.Row="2"/>
            <local:YellowPeg    Grid.Column="1" Grid.Row="0"/>
            <local:BluePeg      Grid.Column="1" Grid.Row="1"/>
            <local:OrangePeg    Grid.Column="1" Grid.Row="2"/>

        </Grid>
    </Border>
</UserControl>
