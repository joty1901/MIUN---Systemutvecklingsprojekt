<Page x:Class="MaterMinds.ChoosePlayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MaterMinds"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="ChoosePlayerPage">
    <Border Background="White">
        <Grid>
            <TextBox HorizontalAlignment="Left" Margin="329,217,0,0" Text="{Binding Nickname}" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="120"/>
            <Button Content="Create Player" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="120" Height="40" Command="{Binding NewPlayer}" Margin="329,252,0,0"/>
            <Button Content="Select Player" HorizontalAlignment="Left" Margin="487,252,0,0" VerticalAlignment="Top" Height="40" Width="120" Command="{Binding ChoosePlayer}"/>
            <ListBox Margin="475,28,181,363" ItemsSource="{Binding PlayerList}" DisplayMemberPath="Nickname"/>
        </Grid>
    </Border>

</Page>
